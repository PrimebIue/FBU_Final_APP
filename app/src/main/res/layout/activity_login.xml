<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/gray_500">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_placeholder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>


    <com.facebook.login.widget.LoginButton
        android:id="@+id/btnLoginFB"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ivLogo"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/tvOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or"
        android:textColor="@color/white"
        android:layout_below="@+id/btnLoginFB"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <View
        android:layout_width="150dp"
        android:layout_toLeftOf="@+id/tvOr"
        android:layout_alignTop="@+id/tvOr"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="0.8dp"
        android:background="@color/white"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/tvOr" />
    <View
        android:layout_width="150dp"
        android:layout_toRightOf="@+id/tvOr"
        android:layout_alignTop="@+id/tvOr"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="0.8dp"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/tvOr" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/tvOr"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/custom_input"
        android:hint="E-Mail"
        android:textSize="14sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/etEmail"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/custom_input"
        android:hint="Password"
        android:textSize="14sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etPassword"
        android:backgroundTint="@color/light_blue"
        android:text="Log In"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/etEmail"
        android:layout_alignLeft="@+id/etEmail"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/light_green"
        android:text="Register"
        android:layout_alignLeft="@+id/btnLogin"
        android:layout_alignRight="@+id/btnLogin"
        android:textColor="@color/white"/>





</RelativeLayout>