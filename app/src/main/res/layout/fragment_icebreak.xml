<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.IcebreakFragment"
    android:background="@color/off_white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scan_a_user_code_to_break_the_ice"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/light_black"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textSize="36dp"/>

    <com.ortiz.touchview.TouchImageView
        android:id="@+id/ivQRCode"
        android:layout_width="420dp"
        android:layout_height="1200dp"
        android:layout_alignParentBottom="true"
        tools:src="@tools:sample/avatars" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/outline_photo_camera_24"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:tint="@color/white"
        android:layout_margin="16dp"
        tools:ignore="RtlHardcoded" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSearchUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/outline_search_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        app:tint="@color/white"
        android:layout_margin="16dp"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>